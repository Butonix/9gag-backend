    "mongoose": "^5.10.14"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.15",
    "@types/mongoose": "^5.10.1",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "commitizen": "^4.2.2",
    "concurrently": "^5.3.0",
